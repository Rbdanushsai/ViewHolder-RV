<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="391dp"
        android:layout_height="148dp"
        app:cardBackgroundColor="#EEEEEE">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="391dp"
            android:layout_height="148dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:layout_marginStart="63dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="115dp"
                android:layout_weight="1.5"
                android:fontFamily="roboto"
                android:lineHeight="16sp"
                android:text="This is the title of the event. Lorem Ipsum..."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.45"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.364" />

            <Button
                android:id="@+id/bookmark"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="357dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="112dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/body"
                android:layout_width="271dp"
                android:layout_height="61dp"
                android:layout_marginStart="77dp"
                android:layout_marginTop="83dp"
                android:layout_marginEnd="43dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="roboto"
                android:lineHeight="14sp"
                android:text="This is some sample text that is a preview for what content might be here. This text might end up being longer than the actual size of this box so Iâ€™m going to end this very long statement now with a triple d..."
                android:textColor="#979797"
                android:textFontWeight="300"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_weight="4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/category"
                android:layout_width="52dp"
                android:layout_height="11dp"
                android:layout_marginStart="83dp"
                android:layout_marginTop="47dp"
                android:layout_marginEnd="256dp"
                android:layout_marginBottom="90dp"
                android:fontFamily="roboto"
                android:lineHeight="11sp"
                android:text="CATEGORY 1"
                android:textAlignment="center"
                android:textColor="#00FF00"
                android:textSize="9sp"
                android:textStyle="normal"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="63dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="128dp"
                android:layout_marginBottom="103dp"
                android:layout_weight="1"
                android:fontFamily="roboto"
                android:lineHeight="14sp"
                android:text="posted xx hours ago by John Doe"
                android:textAlignment="center"
                android:textColor="#979797"
                android:textFontWeight="300"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/profile_photo"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="328dp"
                android:layout_marginBottom="90dp"
                android:background="#C4C4C4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.528"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/viewMore"
                android:layout_width="62dp"
                android:layout_height="14dp"
                android:layout_marginStart="317dp"
                android:layout_marginTop="124dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="roboto"
                android:lineHeight="14sp"
                android:text="view more..."
                android:textAlignment="center"
                android:textColor="#001AFF"
                android:textFontWeight="300"
                android:textSize="12sp"
                android:textStyle="italic"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>